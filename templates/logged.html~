<script>
var myVar = setInterval(refresh, 1000);

function refresh() {
  var images = document.images;
  for (var i=0; i<images.length; i++) {
      images[i].src = images[i].src.replace(/\?.*/,function () {
      return '?'+new Date()
    })
  }
}

</script>
